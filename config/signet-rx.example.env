# SIGNET-RX v1-beta

# Listening mode: WX_LIVE | WX_ALERT | WB_WX | SAME_ONLY
MODE=WB_WX

# Wideband Receiver (WB RX)
# RX_PROFILE: WFM_BROADCAST | MANUAL_RX
RX_FREQ_MHZ=89.3
RX_PROFILE=WFM_BROADCAST
# RX_MOD: WFM | NFM | AM | SSB
RX_MOD=WFM
RX_BW_KHZ=200
RX_STEP_KHZ=100.0
RX_SQL=5
RX_GAIN=35

# NOAA Weather Radio settings
WX_FREQ_MHZ=162.550
WX_BW_KHZ=25
WX_GAIN=35

# Audio output: AUX | HDMI | BT
AUDIO_OUTPUT=HDMI
VOLUME=0.60

# Web / UI
HTTP_PORT=8088
BIND=0.0.0.0

# Kiosk
KIOSK_ENABLE=true
KIOSK_TARGET=auto   # hyperpixel|hdmi|both|auto
SCREENSAVER_MINUTES=3
VIZ_STYLE=hifi_bars
